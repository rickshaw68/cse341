{
  "openapi": "3.0.0",
  "info": {
    "title": "CSE341 Contacts API",
    "version": "1.0.0",
    "description": "API for managing contacts"
  },
  "servers": [
  { "url": "/", "description": "Current server" }
],
  "tags": [{ "name": "Contacts", "description": "CRUD operations for contacts" }],
  "paths": {
    "/contacts": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get all contacts",
        "responses": {
          "200": {
            "description": "List of all contacts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Contact" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Contacts"],
        "summary": "Create a new contact",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactCreate" },
              "example": {
                "firstName": "Example",
                "lastName": "User",
                "email": "example.user@example.com",
                "favoriteColor": "Blue",
                "birthday": "1990-01-01"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contact created successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CreateResult" },
                "example": { "insertedId": "6725a3b9b64e3d0b33d7ef91" }
              }
            }
          },
          "400": { "description": "Missing required fields" }
        }
      }
    },
    "/contacts/{id}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "MongoDB ObjectId (24-hex chars)" }
        ],
        "responses": {
          "200": {
            "description": "Contact details",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/Contact" } }
            }
          },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Contact not found" }
        }
      },
      "put": {
        "tags": ["Contacts"],
        "summary": "Replace a contact by ID (all fields required)",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "MongoDB ObjectId (24-hex chars)" }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContactCreate" },
              "example": {
                "firstName": "Updated",
                "lastName": "User",
                "email": "updated.user@example.com",
                "favoriteColor": "Green",
                "birthday": "1991-02-02"
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Contact updated successfully (no content returned)" },
          "400": { "description": "Invalid id format or missing fields" },
          "404": { "description": "Contact not found" }
        }
      },
      "delete": {
        "tags": ["Contacts"],
        "summary": "Delete a contact by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" }, "description": "MongoDB ObjectId (24-hex chars)" }
        ],
        "responses": {
          "204": { "description": "Contact deleted successfully (no content returned)" },
          "400": { "description": "Invalid id format" },
          "404": { "description": "Contact not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "required": ["_id", "firstName", "lastName", "email", "favoriteColor", "birthday"],
        "properties": {
          "_id": { "type": "string", "description": "MongoDB ObjectId", "example": "690808e48ca7987d192b3263" },
          "firstName": { "type": "string", "example": "Example" },
          "lastName": { "type": "string", "example": "User" },
          "email": { "type": "string", "format": "email", "example": "example.user@example.com" },
          "favoriteColor": { "type": "string", "example": "Blue" },
          "birthday": { "type": "string", "format": "date", "example": "1990-01-01" }
        }
      },
      "ContactCreate": {
        "type": "object",
        "required": ["firstName", "lastName", "email", "favoriteColor", "birthday"],
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "favoriteColor": { "type": "string" },
          "birthday": { "type": "string", "format": "date" }
        }
      },
      "CreateResult": {
        "type": "object",
        "properties": {
          "insertedId": { "type": "string", "description": "Newly created document id" }
        }
      }
    }
  }
}
